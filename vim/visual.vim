set tabstop=2
set shiftwidth=2
set laststatus=2

"set cursorline
"set ruler         " show the cursor position all the time
"set showcmd       " display incomplete commands
set scrolloff=5

" Numbers
set number
set numberwidth=5

" Words
set gdefault
set shiftround

" Hide search highlighting
set nohlsearch

" Make Powerline pretty
let g:Powerline_symbols = 'fancy'
